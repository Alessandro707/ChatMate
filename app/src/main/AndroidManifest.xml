<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.main.chatmate">
	
	<uses-permission android:name="android.permission.ACCESS_MEDIA_LOCATION"/>
	<uses-permission android:name="android.permission.READ_CONTACTS"/>
	<application
		android:allowBackup="true"
		android:icon="@mipmap/mate"
		android:label="@string/app_name"
		android:roundIcon="@mipmap/mate_round"
		android:supportsRtl="true"
		android:theme="@style/Theme.AppCompat.NoActionBar">
		<activity android:name="com.main.chatmate.activities.LoginActivity">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name=".activities.MainActivity"/>
		<activity android:name=".activities.LoadingActivity"/>
		<activity android:name=".activities.ContactsActivity"/>
		<activity android:name=".activities.BioActivity"/>
		<activity android:name=".activities.ChatActivity"/>
	</application>
</manifest>