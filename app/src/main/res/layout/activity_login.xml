<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".LoginActivity"
	android:orientation="vertical"
	android:gravity="center_horizontal"
	android:padding="10dp">
	
	
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:padding="10dp"
		android:text="Inserisci numero di telefono"/>
	
	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="+39"/>
		<EditText
			android:id="@+id/login_phoneNumber_editText"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:hint="xxxxxxxxxx"
			android:maxLength="10"
			android:inputType="phone"/>
	</LinearLayout>
	
	<Button
		android:id="@+id/login_sendVerificationCode_button"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAlignment="center"
		android:text="Manda codice di verifica"/>
	
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:padding="10dp"
		android:text="Inserisci codice di verifica"/>
	
	<EditText
		android:id="@+id/login_verificationCode_editText"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:hint="xxxxxx"
		android:maxLength="6"
		android:inputType="number"/>
	
	<TextView
		android:id="@+id/login_timer_textView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Rimanda codice tra 120 secondi" />
	
	<TextView
		android:id="@+id/login_resendCode_textView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Rimanda il codice"/>
	
	<Button
		android:id="@+id/login_checkVerificationCode_button"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAlignment="center"
		android:text="Verifica codice di verifica"/>
	
	<TextView
		android:id="@+id/login_info_textView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textColor="@color/purple_500"/>

</LinearLayout>